@model IEnumerable<CarRental.Models.Xe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Tên xe
            </th>
            <th>
                Mô tả xe
            </th>
            <th>
                Giá thuê
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Loại xe
            </th>
            <th>
                Hình
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiNavigation.TenLoai)
            </td>
            <td>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BienSo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BienSo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BienSo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
