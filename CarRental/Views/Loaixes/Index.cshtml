@model IEnumerable<CarRental.Models.Loaixe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Loại xe
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TenLoai">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TenLoai">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TenLoai">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
