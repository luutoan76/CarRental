@model IEnumerable<CarRental.Models.Loaixe>

@{
    ViewData["Title"] = "Vehicle Types";
}

<h1>Vehicle Types</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Vehicle Type</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Loại xe</th>
            <th>Tùy chọn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TenLoai</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TenLoai">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TenLoai">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TenLoai">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
