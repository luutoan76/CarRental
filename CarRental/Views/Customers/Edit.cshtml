@model CarRental.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Thông tin khách hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Id</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label  class="control-label">Tên khách</label>
                <input asp-for="TenKhach" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label  class="control-label">Sđt</label>
                <input asp-for="Sdt" type="tel" class="form-control" required/>
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tuổi</label>
                <input asp-for="Tuoi" class="form-control" required/>
                <span asp-validation-for="Tuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Password</label>
                <input asp-for="Pass" class="form-control"  required/>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" required />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

